<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:csmath="clr-namespace:CSharpMath.Avalonia;assembly=CSharpMath.Avalonia"
             x:Class="CSharpMath.Avalonia.Example.Pages.MathBlockPage">

    <StackPanel Spacing="24">

        <StackPanel Spacing="4">

            <TextBlock Classes="h1"
                       Text="MathBlock" />

            <TextBlock Classes="h2"
                       Text="Displays math" />

        </StackPanel>

        <StackPanel Spacing="16">

            <TextBlock Classes="h1"
                       Text="Taylor" />

            <csmath:MathBlock HorizontalAlignment="Left"
                              Text="{StaticResource Taylor}" />

        </StackPanel>

        <StackPanel Spacing="16">

            <TextBlock Classes="h1"
                       Text="EvalIntegral" />

            <csmath:MathBlock HorizontalAlignment="Left"
                              Text="{StaticResource EvalIntegral}" />

        </StackPanel>

    </StackPanel>

</UserControl>
