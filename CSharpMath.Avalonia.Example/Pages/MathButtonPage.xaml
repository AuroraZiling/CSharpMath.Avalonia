<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:csmath="clr-namespace:CSharpMath.Avalonia;assembly=CSharpMath.Avalonia"
             x:Class="CSharpMath.Avalonia.Example.Pages.MathButtonPage">

    <ScrollViewer Margin="0, 8">

        <StackPanel Spacing="24">

            <StackPanel Spacing="4">

                <TextBlock Classes="h1"
                           Text="CSharpMath.Avalonia.MathView in a Button" />

                <TextBlock Classes="h2"
                           Text="Math displayed in a button" />

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Spacing="8">
                <Button>
                    <csmath:MathView LaTeX="{StaticResource Taylor}"/>
                </Button>

            </StackPanel>

        </StackPanel>
      
    </ScrollViewer>

</UserControl>
