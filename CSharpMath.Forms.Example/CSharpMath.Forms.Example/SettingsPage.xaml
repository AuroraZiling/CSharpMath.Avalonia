<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSharpMath.Forms.Example.SettingsPage"
             Title="Settings">
    <TableView>
        <TableRoot>
            <TableSection>
                <SwitchCell x:Name="DrawStringBoxes" Text="Draw string boxes" On="True" OnChanged="SwitchCell_OnChanged"/>
            </TableSection>
            <TableSection Title="Alignment">
                <ViewCell>
                    <Picker x:Name="Alignment" SelectedIndexChanged="Alignment_SelectedIndexChanged"/>
                </ViewCell>
            </TableSection>
            <TableSection>
                <EntryCell x:Name="TextColor" Label="Text color" Text="#000000" Completed="TextColor_Completed"/>
                <EntryCell x:Name="BackColor" Label="Background color" Text="#D3D3D3" Completed="BackColor_Completed"/>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>