<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:math="clr-namespace:CSharpMath.Forms;assembly=CSharpMath.Forms"
             x:Class="CSharpMath.Forms.Example.SelectPage"
             Title="Select">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Picker x:Name="Picker" HorizontalOptions="FillAndExpand"/>
            <Picker x:Name="Size" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label x:Name="Label" HorizontalOptions="FillAndExpand"/>
            <Button Text="Reset pan" Clicked="Button_Clicked" HorizontalOptions="End"/>
        </StackLayout>
        <math:MathView x:Name="View"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand"
                       EnableTouchEvents="True"/>
    </StackLayout>
</ContentPage>